<h1> Search Results </h1>

<table>
  <tr>
    <th>Title</th>
    <th>Author</th> 
    <th>ISBN</th>
  </tr>

  <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.author %></td>
      <td><%= book.ISBN %></td>
      <td><%= link_to 'Edit', edit_book_path(book) %></td>
    <% if book.copies > 0 %>
        <td><%= link_to 'Checkout', book_checkout_path(book) %></td>
    <%end %>
      
    </tr>
  <% end %>
</table>

<%= link_to 'Back to search', administrator_search_path %>
      